# Multi-tenant Database Configuration
# Copy this to .env and customize for your deployment

# Industry vertical - determines database name (banking, insurance, telecom, etc.)
INDUSTRY_VERTICAL=banking

# Industry-specific database connection
# Note: Shared PostgreSQL container settings are standardized across all industries
# Container: shared-postgres-multitenant
# User: multitenant_user
# Password: multitenant_password
# Port: 5432
DATABASE_URL=postgresql://multitenant_user:multitenant_password@shared-postgres-multitenant:5432/banking

# For external access (connecting from host machine during development):
# DATABASE_URL=postgresql://multitenant_user:multitenant_password@localhost:5432/banking

# Application settings
DEPLOY_IMAGE_NAME=banking-app
DEPLOY_CONTAINER_PREFIX=banking
DEPLOY_SITE_PORT=3000

# CDP Settings
NEXT_PUBLIC_CDP_WRITEKEY=your_cdp_writekey
NEXT_PUBLIC_CDP_ENDPOINT=your_cdp_endpoint
NEXT_PUBLIC_DISCOVER_DEFAULT_SCRIPT=your_discover_script
NEXT_PUBLIC_INTERACT_ENDPOINT=your_interact_endpoint
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id

